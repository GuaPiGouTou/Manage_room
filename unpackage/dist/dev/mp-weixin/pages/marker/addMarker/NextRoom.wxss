
.container {
  padding: 20rpx;
}
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
}
.header-title {
  font-size: 36rpx;
  font-weight: bold;
}
.nav-buttons {
  display: flex;
  gap: 20rpx;
}
.nav-btn {
  background-color: #007AFF;
  color: white;
  border-radius: 8rpx;
  padding: 12rpx 24rpx;
  font-size: 28rpx;
}
.section {
  background-color: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  color: #333;
}
.input-group {
  margin-bottom: 24rpx;
}
.input-label {
  display: block;
  margin-bottom: 8rpx;
  font-weight: 500;
  color: #333;
}
.input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #eee;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}
.upload-btn {
  background-color: #f0f0f0;
  color: #333;
  border-radius: 12rpx;
  padding: 20rpx;
  text-align: center;
  margin-bottom: 16rpx;
}
.file-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  margin-bottom: 8rpx;
}
.delete-btn {
  background-color: #ff4d4f;
  color: white;
  border-radius: 8rpx;
  padding: 8rpx 16rpx;
  font-size: 24rpx;
}
.thumbnail {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  margin-top: 16rpx;
}
.facilities-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  margin-top: 16rpx;
}
.facility-item {
  padding: 20rpx;
  border: 1rpx solid #eee;
  border-radius: 12rpx;
  text-align: center;
}
.facility-item.active {
  background-color: #e6f7ff;
  border-color: #1890ff;
  color: #1890ff;
}
.payment-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}
.payment-label {
  width: 120rpx;
  font-size: 28rpx;
  color: #666;
}
.payment-input {
  flex: 1;
  height: 70rpx;
  border: 1rpx solid #eee;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}
